extends layout

block content
  // Header
  header
    #maincontent.container(tabindex='-1')
      .row
        .col-lg-12
          img.img-responsive(src='img/profile.png', alt='')
          .intro-text
            h1.name Start Bootstrap
            hr.star-light
            span.skills Web Developer - Graphic Artist - User Experience Designer
  section#portfolio(data-ng-controller='ProductController')
    .container
      .row
        .col-lg-12.text-center
          h2 Products
          hr.star-primary
          .col-xs-2.col-xs-offset-10
            // input.form-control(ng-model='search')
          .col-xs-10.col-xs-offset-1
            table.table.table-striped
              thead
                tr
                  th(ng-if='checkRow(key)' ng-repeat='(key, value) in tableData[0]')
                  | {{key}}
                tr
                  td(ng-if='checkRow(key)' ng-repeat='(key, value) in tableData[0]')
                    input.form-control(ng-model='search[key]')
              tbody
                tr(ng-repeat='row in tableData | filter:search')
                  td(ng-if='checkRow(key)' ng-repeat='(key, value) in row')
                    input.form-control(ng-model='row[key]')
      